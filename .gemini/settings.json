{
  "$schema": "https://geminicli.com/schemas/settings.json",
  "core": {
    "checkForUpdates": true,
    "theme": "Default"
  },
  "models": {
    "previewFeatures": true
  },
  "output": {
    "format": "text"
  },
  "tools": {
    "useRipgrep": true,
    "truncateLargeToolOutputs": true
  },
  "prompts": {
    "enableAiCompletions": true
  },
  "context": {
    "memorySearchIncludeDirectories": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "mcpServers": {
    "context7": {
      "httpUrl": "https://mcp.context7.com/mcp"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "chrome-dev-tools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest", "--isolated"]
    }
  }
}
